            android:text="@string/giornata"
            android:id="@+id/textView9"
            android:gravity="bottom"
            android:autoText="true"
            android:textSize="14dp"
            android:layout_below="@+id/number2"
            android:layout_alignStart="@+id/testomat"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="9"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="n°"
            android:id="@+id/Numero"
            android:enabled="true"
            android:focusable="true"
            android:textSize="15dp"
            android:textIsSelectable="false"

            android:layout_column="0"
            android:layout_row="1"
            android:layout_alignBaseline="@+id/risultato"
            android:layout_alignBottom="@+id/risultato"
            android:layout_toStartOf="@+id/risultato"
            android:textColor="#ff645e64" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/risultato"
            android:textStyle="bold"
            android:enabled="true"
            android:focusable="true"
            android:textSize="22dp"
            android:textIsSelectable="false"

            android:singleLine="true"
            android:layout_above="@+id/gridLayout"
            android:layout_toStartOf="@+id/condividi2"
            android:layout_row="1"
            android:layout_column="1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView9"
            android:layout_row="1"
            android:layout_column="2"
            android:src="@drawable/trasporto25"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_marginLeft="0dp"
            android:layout_marginRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="   n°"
            android:id="@+id/textView5"
            android:enabled="true"
            android:focusable="true"
            android:textSize="15dp"
            android:textIsSelectable="false"
            android:layout_column="3"
            android:layout_row="1"
            android:layout_alignBaseline="@+id/risultato"
            android:layout_alignBottom="@+id/risultato"
            android:layout_toStartOf="@+id/risultato"
            android:textColor="#ff645e64" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/via31"
            android:textStyle="bold"
            android:enabled="true"
            android:focusable="true"
            android:textSize="22dp"
            android:textIsSelectable="false"
            android:singleLine="true"
            android:layout_above="@+id/gridLayout"
            android:layout_toStartOf="@+id/condividi2"
            android:layout_row="1"
            android:layout_column="4" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView10"
            android:layout_row="1"
            android:layout_column="5"
            android:src="@drawable/trasporto31"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="0"
            android:id="@+id/via40"
            android:textStyle="bold"
            android:enabled="true"
            android:focusable="true"
            android:textSize="22dp"
            android:textIsSelectable="false"
            android:singleLine="true"
            android:layout_above="@+id/gridLayout"
            android:layout_toStartOf="@+id/condividi2"
            android:layout_row="1"
            android:layout_column="7" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView11"
            android:layout_row="1"
            android:layout_column="8"
            android:src="@drawable/trasporto40"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_marginLeft="0dp"
            android:layout_marginRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="    n°"
            android:id="@+id/textView6"
            android:enabled="true"
            android:focusable="true"
            android:textSize="15dp"
            android:textIsSelectable="false"
            android:layout_column="6"
            android:layout_row="1"
            android:layout_alignBaseline="@+id/risultato"
            android:layout_alignBottom="@+id/risultato"
            android:layout_toStartOf="@+id/risultato"
            android:textColor="#ff645e64" />

    </GridLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout"
        android:layout_above="@+id/gridLayout"></LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3"
        android:layout_above="@+id/linearLayout">

        <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:id="@+id/griglia"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/linearLayout">

            <TextView
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/T_portata_camion"
                android:id="@+id/textView"
                android:gravity="bottom"
                android:textSize="12dp"
                android:layout_below="@+id/spinner"
                android:layout_alignParentStart="true"
                android:layout_column="0"
                android:layout_row="2"
                android:textColor="#ff185b79" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:id="@+id/imageView15"
                android:src="@drawable/separatore"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_columnSpan="7" />

            <TextView

