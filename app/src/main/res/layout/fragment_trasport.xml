                android:id="@+id/tipo_area"
                android:gravity="bottom"
                android:textSize="15dp"
                android:layout_below="@+id/spinner"
                android:layout_alignParentStart="true"
                android:layout_column="1"
                android:layout_row="2"
                android:layout_columnSpan="2"
                android:textColor="#ff185b79"
                android:textIsSelectable="true" />

            <EditText
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/number1"
                android:textSize="15dp"
                android:maxLength="10"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:layout_column="0"
                android:layout_row="3"
                android:layout_columnSpan="2"
                android:text="@string/n_25"
                android:textColor="#ff6f6969"
                android:background="@drawable/border2"
                android:paddingLeft="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/ris25"
                android:layout_toEndOf="@+id/textView4"
                android:textSize="25dp"
                android:textIsSelectable="true"

                android:layout_alignTop="@+id/number1"
                android:textColor="#ab070509"
                android:layout_toRightOf="@+id/textView4"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_row="3"
                android:layout_column="1"
                android:layout_marginTop="6dp" />

            <EditText
                android:layout_marginTop="10dp"
                android:layout_width="117dp"
                android:layout_height="35dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:layout_marginLeft="12dp"
                android:id="@+id/materiale"
                android:layout_row="0"
                android:layout_column="0"
                android:hint="@string/T_scrivi_incolla"
                android:maxLength="15"
                android:textColor="#ff0e2592"
                android:textSize="15dp"
                android:textIsSelectable="false"
                android:background="@drawable/border2"
                android:paddingLeft="15dp" />

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/clickme"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:theme="@android:style/Widget.Button"


                android:layout_column="1"
                android:layout_row="0"
                android:layout_columnSpan="6"
                android:background="@drawable/bottone_rosso_new" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView"
                android:layout_row="3"
                android:layout_marginLeft="15dp"
                android:layout_column="2"
                android:src="@drawable/trasporto25" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/number1"
                android:layout_column="0"
                android:layout_marginLeft="12dp"

                android:layout_marginRight="12dp"
                android:layout_row="5"
                android:gravity="bottom"
                android:text="@string/T_portata_camion"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff185b79"
                android:textSize="12sp" />

            <EditText
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/number2"

                android:text="@string/n_31"
                android:textAlignment="inherit"
                android:textIsSelectable="false"

                android:focusableInTouchMode="true"

                android:textSize="15dp"
                android:autoText="false"
                android:layout_alignTop="@+id/ris40"
                android:layout_alignParentStart="false"
                android:maxLength="10"
                android:layout_alignParentEnd="false"
                android:layout_column="0"
                android:layout_row="6"
                android:textColor="#ff6f6969"
                android:background="@drawable/border2"
                android:paddingLeft="15dp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0"
                android:id="@+id/ris31"
                android:textSize="25dp"
                android:textIsSelectable="true"


                android:layout_centerVertical="true"
                android:textColor="#ab070509"
                android:layout_toRightOf="@+id/number3"
                android:layout_row="6"
                android:layout_column="1"
                android:layout_marginTop="6dp" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView7"
                android:layout_row="6"
                android:layout_marginLeft="15dp"
                android:layout_column="2"
                android:src="@drawable/trasporto31" />

            <TextView
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/T_portata_camion"
                android:id="@+id/textView3"
